<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF">

    <ImageView
        android:id="@+id/list_notification_speech_bubble"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/image_speech_bubble" />

    <ImageView
        android:id="@+id/icon_notification_type"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@color/Checkid_Yellow"
        app:layout_constraintBottom_toBottomOf="@+id/list_notification_speech_bubble"
        app:layout_constraintStart_toStartOf="@+id/list_notification_speech_bubble"
        app:layout_constraintTop_toTopOf="@+id/list_notification_speech_bubble"
        app:srcCompat="@drawable/ic_notification_system" />

    <TextView
        android:id="@+id/txt_notification_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp"
        android:background="@color/Checkid_Yellow"
        android:text="@string/Notification_title"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/icon_notification_type"
        app:layout_constraintTop_toTopOf="@+id/list_notification_speech_bubble" />

    <TextView
        android:id="@+id/txt_notification_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:background="@color/Checkid_Yellow"
        android:text="@string/Notification_content"
        app:layout_constraintStart_toEndOf="@+id/icon_notification_type"
        app:layout_constraintTop_toBottomOf="@+id/txt_notification_title" />

    <ImageButton
        android:id="@+id/listNotificationDeleteButton"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="20dp"
        android:background="#00FFFFFF"
        app:layout_constraintEnd_toEndOf="@+id/list_notification_speech_bubble"
        app:layout_constraintTop_toTopOf="@+id/list_notification_speech_bubble"
        app:srcCompat="@drawable/ic_notification_delete" />

</androidx.constraintlayout.widget.ConstraintLayout>